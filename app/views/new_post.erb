<h2>Create a New Post:</h2>

<form action="/new_post" method="POST">
	<div>
		<label for="title">Title: </label>
		<input id="title" type="text" name="title" value="<%= @post.try(:title) %>">
	</div>
	<div>
		<label for="body">Body: </label>
		<input id="body" type="text" name="body" value="<%= @post.try(:body) %>">
	</div>
	<div>
		<label for="post_tags">Tags: </label>
		<input id="post_tags" type="text" name="tags" value="<%= @post.try(:show_tags) %>" placeholder="tag1, tag2, etc">
	</div>
	<div>
		<input type="submit">
	</div>
</form>
