<h2>Create a New Post:</h2>

<form action="/new_post" method="POST">
	<div>
		<label for="title">Title: </label>
		<input id="title" type="text" name="post[title]" value="<% @post.try(:title) %>">
	</div>
	<div>
		<label for="body">Body: </label>
		<input id="body" type="text" name="post[body]" value="<% @post.try(:body) %>">
	</div>
	<div>
		<label for="post_tags">Tags: </label>
		<input id="post_tags" name="post[tags]" value="feelings, work, other">
	</div>
	<div>
		<input type="submit">
	</div>
</form>
